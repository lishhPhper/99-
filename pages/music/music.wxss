.flex-wrp {
    display: flex;
    height: 80rpx;
}

.flex-item {
    margin: 15rpx;
}

.flex-wrp-1 {
    display: flex;
    height: 200rpx;
    padding: 20rpx 20rpx;
    border: 2rpx solid #cecece;
}

.item-text {
    font-size: 11pt;
    display: -webkit-box;
    word-break: break-all;
    overflow: hidden;
    text-overflow: ellipsis;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}

.empty_store {
    text-align: center;
}

.selected_img {
    width: 60rpx;
    height: 60rpx;
    margin: 5rpx 20rpx 5rpx 0rpx;
    float: right;
}

.no_selected_img {
    display: none;
}

.category_name {
    height: 60rpx;
    line-height: 60rpx;
    float: left;
    margin-left: 30rpx;
}

.quantity {
    margin-left: 30rpx;
    font-size: 8pt;
    color: #ccc;
    height: 40rpx;
    line-height: 40rpx;
    width: 80%;
    float: left;
}

.selected_category_name {
    height: 60rpx;
    line-height: 60rpx;
    float: left;
    margin-left: 30rpx;
    color: #f60;
}

.selected_quantity {
    margin-left: 30rpx;
    font-size: 8pt;
    color: #ccc;
    height: 40rpx;
    line-height: 40rpx;
    width: 80%;
    float: left;
    color: #f60;
}

.saveMusic {
    width: 100%;
    height: 80rpx;
    line-height: 80rpx;
    color: #fff;
    font-weight: 400;
    background-color: #f60;
    position: fixed;
    bottom: 0;
}
