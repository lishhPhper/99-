.flex-wrp {
    display: flex;
    height: 80rpx;
}

.flex-item {
    margin: 15rpx;
}

.flex-wrp-1 {
    display: flex;
    height: 200rpx;
    padding: 20rpx 20rpx;
    border: 2rpx solid #cecece;
}

.item-text {
    font-size: 11pt;
    display: -webkit-box;
    word-break: break-all;
    overflow: hidden;
    text-overflow: ellipsis;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}

.empty_store {
    text-align: center;
}

.selected_img {
    width: 60rpx;
    height: 60rpx;
    margin: 10rpx 30rpx 10rpx 10rpx;
    float: right;
}

.no_selected_img {
    display: none;
}
