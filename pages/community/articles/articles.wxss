.scroll-view_H{
    white-space: nowrap;
}
.scroll-view-item{
    height: 200px;
}
.scroll-view-item_H{
    display: inline-block;
    width: 25%;
    height: 40px;
    font-size: 12pt;
}

.navs {
  display: flex;
}

.nav-item {
  width: 25%;
  display: flex;
  align-items: center;
  flex-direction: column;
  padding: 20rpx;
}

.nav-item .nav-image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}

.nav-item text {
  padding-top: 20rpx;
  font-size: 25rpx;
}

.picture {
  padding: 30rpx 30rpx;
}
.picture_top {
  display: flex;
  align-items: center;
}
.picture_left image {
  width: 70rpx;
  height: 70rpx;
}
.picture_left {
  width: 100%;
  height: 200rpx;
  border: 2px solid #CECECE;
  border-radius: 10rpx;
  text-align: center;
}