.tarbar {
    background-color: #CCC;
}
.tarbar button {
    background-color: #f60;
    width: 220rpx;
    height: 70rpx;
    margin-top: 15rpx;
    color: #fff;
    line-height: 70rpx;
}

.required-img{
  width:30rpx;
  height:30rpx;
  float:left;
  margin:25rpx 10rpx 25rpx 0;
}
.item-name{
  float:left;
  height:80rpx;
  line-height:80rpx;
  margin-right:10rpx;
}

.goods_name{
  float:left;
  border:1px solid #888888;
  height:50rpx;
  line-height:50rpx;
  margin:10rpx;
  width:500rpx;
}

.short-input{
  float:left;
  border:1px solid #888888;
  height:50rpx;
  line-height:50rpx;
  margin:10rpx;
  width:200rpx;
}

.item-button{
  height:50rpx;
  line-height:50rpx;
  margin:15rpx 0rpx;
  float:left;
}
.operation-img{
  float:left;
  height:40rpx;
  width:40rpx;
  padding:5rpx 0rpx;
}
.button-view{
  float:left;
  font-size:11pt;
}
.tip-view{
  float:left;
  height:50rpx;
  line-height:50rpx;
  margin:15rpx;
}
.price-item{
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-top:10rpx;
}
.price-item input{
  border:1px solid #888888;
}
.price-text{
  width:65rpx;
}
.equal-text{
  width:30rpx;
  margin-left:10rpx; 
}
.price-input{
  max-width:120rpx;
}
.configuration-input{
  max-width:290rpx;
}
.retail-text{
  width:95rpx;
  margin-left:10rpx;
}
.spec-view{
  display: flex;
  flex-direction: row;
  align-items: center;
}
.spec-view input{
  border:1px solid #888888;
  margin-left:30rpx;
  margin-top:10rpx;
}
.item-spec{
  float:left;
  height:80rpx;
  line-height:80rpx;
  margin-right:10rpx;
  margin-left:35rpx;
}
.item-spec-input{
  float:left;
  border:1px solid #888888;
  height:50rpx;
  line-height:50rpx;
  margin:10rpx;
  width:200rpx;
}