/* pages/shops/index/index.wxss */
.navs {
  display: flex;
}

.nav-item {
  width: 45%;
  display: flex;
  align-items: center;
  flex-direction: column;
  padding: 20rpx;
}

.nav-item .nav-image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
}

.nav-item text {
  padding-top: 20rpx;
  font-size: 25rpx;
}
.picture {
  margin-top: 20rpx;
  padding: 30rpx 30rpx;
  background: #fff;
}
.picture_top {
  display: flex;
  align-items: center;
}
.picture_left image {
  width: 70rpx;
  height: 70rpx;
}
.picture_left {
  width: 100%;
  height: 300rpx;
  border: 2px solid #CECECE;
  border-radius: 10rpx;
  text-align: center;
}
