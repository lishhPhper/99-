.navs {
  display: flex;
  height: 350rpx;
}

.nav-item {
  width: 50%;
  display: flex;
  align-items: center;
  flex-direction: column;
  /* padding: 10rpx 15rpx;  */
}
.nav-item-left{
  padding: 0 0 0 20rpx; 
}
.nav-item-right{
  padding: 0 20rpx 0 0; 
}
