
.flex-wrp {
  display: flex;
  align-items: center;
  height:100rpx;  
}
.flex-item{
  margin: 15rpx;
}
.flex-wrp-1 {
  display: flex;
  height:200rpx;
  padding: 20rpx 20rpx;   
  border: 2rpx solid #CECECE;
}
.item-text{
  font-size:11pt;
  display:-webkit-box;
  word-break:break-all;
  overflow:hidden;
  text-overflow:ellipsis;
  -webkit-line-clamp:2;
  -webkit-box-orient: vertical;
}
.empty_store{
  text-align: center;
}

.store_name {
  width:440rpx;
  margin:4rpx 0 0 20rpx;
  word-break:keep-all;
  white-space:nowrap;
  overflow:hidden;
  text-overflow:ellipsis;
  font-weight:bold;
  color:#ff6600;
}

.store_address{
  width:440rpx;
  height:96rpx;
  margin:4rpx 0 0 20rpx;
}
.store_img {
  width:250rpx;
  height:200rpx;
}
.store_about{
  display:flex;
  flex-direction:row;
  margin:6rpx 0 0 20rpx;
  width:440rpx;
  height:40rpx;
}
.store_pop{
  width:250rpx;
  height:42rpx;
  font-size:11pt;
}
.store_distance{
  width:250rpx;
  height:46rpx;
  text-align:right;
  font-size:11pt;
}