.info{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  border-bottom: 2rpx solid #ccc;
  height: 90rpx;
}
.info-title{
  font-size: 14pt;
  line-height: 90rpx;
  margin-left:30rpx;
}

.info-detail{
  font-size: 13pt;
  color: rgb(102, 96, 96);
  line-height: 90rpx;
  margin-right:30rpx;
  overflow:hidden;
  white-space:nowrap;
  text-overflow:ellipsis;
  max-width: 500rpx;
}

.info-img{
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
  margin:10rpx 30rpx 0 0;
}